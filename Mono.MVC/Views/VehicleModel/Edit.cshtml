@model Mono.MVC.Models.VehicleModelViewModel
<h1>Edit</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Abrv</label>
        <input type="text" class="form-control" asp-for="Abrv" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Make</label>
        <div>

            @Html.DropDownListFor(x => x.VehicleMakeId, ViewBag.makeList as IEnumerable<SelectListItem>, "Please select vehicle make."))
            
        </div>
    </div>
    <div class="mt-3">
        <h5>Delete this vehicle make? </h5>
        <button type="submit" class="btn btn-danger">Yes</button>
    </div>
</form>